{% extends 'base.html.twig' %}
{% block body %}
    {% for movie in movies %}
        <p>{{ movie.title }}</p>
        <p>{{ movie.genre }}</p>
        <p>{{ movie.duration }}</p>
        <p>{{ movie.poster }}</p>
        <p>{{ movie.releaseDate|date("d/m/Y H:i") }}</p>
        <a class="movie__button" href="{{ path('movie', {'id': movie.id}) }}">Vers la page du film</a>
    {% endfor %}
{% endblock %}